{
  "name": "noutify",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo run build",
    "dev": "dotenv -- turbo run dev",
    "lint": "dotenv -- turbo lint",
    "start": "dotenv -- turbo start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:migrate": "dotenv -- turbo db:migrate",
    "db:deploy": "dotenv -- turbo db:deploy",
    "clean": "bash ./clean.sh",
    "postinstall": "dotenv -- bunx turbo db:generate"
  },
  "devDependencies": {
    "@noutify/eslint": "*",
    "@noutify/tsconfig": "*",
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "typescript": "5.5.4",
    "dotenv-cli": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "core-js-pure"
  ]
}
